<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.educareapps.quiz.activities.QuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".1"
            android:gravity="left|center"
            android:text="" />

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_gravity="center"
            android:layout_weight=".2"
            android:gravity="center"
            android:text="What is the name of your favorite cricket team?"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty_five" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".6">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <View
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".15" />

                    <RadioButton
                        android:id="@+id/rbtnOptionOne"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".4"
                        android:checked="false"
                        android:text="Australia"
                        android:textSize="@dimen/twenty" />

                    <RadioButton
                        android:id="@+id/rbtnOptionTwo"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".4"
                        android:checked="false"
                        android:text="Bangladesh"
                        android:textSize="@dimen/twenty" />

                    <View
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".05" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <View
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".15" />

                    <RadioButton
                        android:id="@+id/rbtnOptionThree"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".4"
                        android:checked="false"
                        android:text="India"
                        android:textSize="@dimen/twenty" />

                    <RadioButton
                        android:id="@+id/rbtnOptionFour"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".4"
                        android:checked="false"
                        android:text="England"
                        android:textSize="@dimen/twenty" />

                    <View
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".05" />
                </LinearLayout>


            </RadioGroup>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".1" />


    </LinearLayout>

    <!--<ImageButton-->
        <!--android:id="@+id/ibtnPreviousQuestion"-->
        <!--android:layout_width="@dimen/seventy"-->
        <!--android:layout_height="@dimen/sixty"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:background="@color/transparent"-->
        <!--android:src="@android:drawable/ic_media_previous" />-->

    <ImageButton
        android:id="@+id/ibtnNextQuestion"
        android:layout_width="@dimen/seventy"
        android:layout_height="@dimen/sixty"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/blueLight"
        android:src="@android:drawable/ic_media_next"
        android:layout_margin="@dimen/ten"/>

</RelativeLayout>