<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quiz_play_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".3"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/app_color"
                    android:gravity="center"
                    android:text="Questions"
                    android:textColor="@color/white"
                    android:textSize="@dimen/twenty_five" />

            </LinearLayout>

        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".7"
            android:background="@color/greyDLight"
            android:orientation="vertical"
            android:weightSum="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight=".01"
                android:background="@color/greyLight"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty_five" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight=".99"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="5">

                    <LinearLayout
                        android:id="@+id/llOptionOne"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_margin="@dimen/five"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tvOptionOne"
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight=".8"
                            android:layout_marginLeft="@dimen/ten"
                            android:gravity="left|center"
                            android:text="Option One"
                            android:textColor="@color/black"
                            android:textSize="@dimen/twenty" />

                        <RelativeLayout
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight=".2">

                            <ImageButton
                                android:id="@+id/ibtnOptionOneTick"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@android:color/transparent"
                                android:padding="@dimen/ten"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_tick" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llOptionTwo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_margin="@dimen/five"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tvOptionTwo"
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight=".8"
                            android:layout_marginLeft="@dimen/ten"
                            android:gravity="left|center"
                            android:text="Option One"
                            android:textColor="@color/black"
                            android:textSize="@dimen/twenty" />

                        <RelativeLayout
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight=".2">

                            <ImageButton
                                android:id="@+id/ibtnOptionTwo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@android:color/transparent"
                                android:padding="@dimen/ten"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_tick" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llOptionThree"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_margin="@dimen/five"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tvOptionThree"
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight=".8"
                            android:layout_marginLeft="@dimen/ten"
                            android:gravity="left|center"
                            android:text="Option One"
                            android:textColor="@color/black"
                            android:textSize="@dimen/twenty" />

                        <RelativeLayout
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight=".2">

                            <ImageButton
                                android:id="@+id/ibtnOptionThree"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@android:color/transparent"
                                android:padding="@dimen/ten"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_tick" />


                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llOptionFour"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_margin="@dimen/five"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tvOptionFour"
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/ten"
                            android:layout_weight=".8"
                            android:gravity="left|center"
                            android:text="Option One"
                            android:textColor="@color/black"
                            android:textSize="@dimen/twenty" />

                        <RelativeLayout
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight=".2">

                            <ImageButton
                                android:id="@+id/ibtnOptionFour"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@android:color/transparent"
                                android:padding="@dimen/ten"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_tick" />

                        </RelativeLayout>


                    </LinearLayout>

                    <Button
                        android:id="@+id/btnNextQuestion"
                        android:layout_width="@dimen/hundred"
                        android:layout_height="@dimen/zero"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/ten"
                        android:layout_weight=".5"
                        android:text="Next"
                        android:background="@drawable/button_bg"
                        android:textColor="@color/white"
                        android:textSize="@dimen/twenty" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_weight=".5" />

                </LinearLayout>
            </ScrollView>

        </LinearLayout>


    </LinearLayout>


    <ImageButton
        android:id="@+id/ibtnTestPlayerBack"
        android:layout_width="@dimen/fifty"
        android:layout_height="@dimen/fifty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:padding="@dimen/five"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="@dimen/hundred_fifty"
        android:layout_height="@dimen/thirty"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="abc"
        android:textColor="@color/white"
        android:textSize="@dimen/fifteen" />

</RelativeLayout>
