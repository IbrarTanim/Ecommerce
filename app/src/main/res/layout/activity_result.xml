<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quiz_play_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/tvSet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".3"
            android:background="@color/app_color"
            android:gravity="center"
            android:text="@string/quiz_summery"
            android:textColor="@color/white"
            android:textSize="@dimen/forty" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".7"
            android:background="@color/quiz_play_bg_color"
            android:orientation="vertical"
            android:weightSum=".57">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_margin="@dimen/ten"
                android:layout_weight=".1"
                android:background="@drawable/cell_bg"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text="@string/totat_played"
                    android:textColor="@color/greyLight"
                    android:textSize="@dimen/twenty" />

                <TextView
                    android:id="@+id/tvTotalPlayed"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/greyLight"
                    android:textSize="@dimen/twenty" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:layout_marginBottom="@dimen/ten"
                android:layout_weight=".1"
                android:background="@drawable/cell_bg"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text="@string/correct_answer"
                    android:textColor="@color/greyLight"
                    android:textSize="@dimen/twenty" />

                <TextView
                    android:id="@+id/tvCorrectAnswer"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/greyLight"
                    android:textSize="@dimen/twenty" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:layout_marginBottom="@dimen/ten"
                android:layout_weight=".1"
                android:background="@drawable/cell_bg"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text="@string/wrong_answer"
                    android:textColor="@color/greyLight"
                    android:textSize="@dimen/twenty" />

                <TextView
                    android:id="@+id/tvWrongAnswer"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/greyLight"
                    android:textSize="@dimen/twenty" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:layout_marginBottom="@dimen/ten"
                android:layout_weight=".1"
                android:background="@drawable/cell_bg"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text="@string/total_score"
                    android:textColor="@color/greyLight"
                    android:textSize="@dimen/twenty" />

                <TextView
                    android:id="@+id/tvTotalScore"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/greyLight"
                    android:textSize="@dimen/twenty" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:layout_marginBottom="@dimen/ten"
                android:layout_weight=".1"
                android:background="@drawable/cell_bg"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text="@string/total_duration"
                    android:textColor="@color/greyLight"
                    android:textSize="@dimen/twenty" />

                <TextView
                    android:id="@+id/tvTotalDuration"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/greyLight"
                    android:textSize="@dimen/twenty" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:layout_marginBottom="@dimen/two"
                android:layout_weight=".07"
                android:orientation="horizontal"
                android:weightSum="1">

                <View
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".6" />

                <Button
                    android:id="@+id/btnPlayAgain"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:text="@string/play_again"
                    android:textColor="@color/white"
                    android:textSize="@dimen/twenty" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <ImageButton
        android:id="@+id/ibtnCrossResult"
        android:layout_width="@dimen/fifty"
        android:layout_height="@dimen/fifty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:padding="@dimen/five"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_delete" />

</RelativeLayout>
