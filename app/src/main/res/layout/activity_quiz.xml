<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.educareapps.quiz.activities.QuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_gravity="center"
            android:layout_weight=".2"
            android:gravity="center"
            android:text="What is the name of your favorite cricket team?"
            android:textSize="@dimen/twenty_five" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".8">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <View
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".2" />

                    <RadioButton
                        android:id="@+id/rbtnOptionOne"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".3"
                        android:checked="false"
                        android:text="Australia"
                        android:textSize="25dp" />

                    <RadioButton
                        android:id="@+id/rbtnOptionTwo"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".3"
                        android:checked="false"
                        android:text="Bangladesh"
                        android:textSize="25dp" />

                    <View
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <View
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".2" />

                    <RadioButton
                        android:id="@+id/rbtnOptionThree"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".3"
                        android:checked="false"
                        android:text="India"
                        android:textSize="25dp" />

                    <RadioButton
                        android:id="@+id/rbtnOptionFour"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".3"
                        android:checked="false"
                        android:text="England"
                        android:textSize="25dp" />

                    <View
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".2" />
                </LinearLayout>


            </RadioGroup>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>